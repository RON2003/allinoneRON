<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".info">

    <LinearLayout
        android:layout_width="184dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lvp"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorBackgroundFloating"
            android:cacheColorHint="#FFFFFF"
            android:divider="@android:color/black"
            android:dividerHeight="2dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:onClick="SHOWall"
            android:text="SHOW ALL  INFO"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#030A49"
        android:gravity="center|start"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv10"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:text="INFO about passengers by:"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:background="#00FFE9"
            android:text="TYPE :"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


        <RadioGroup
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:background="#DDD8D8">

            <RadioButton
                android:id="@+id/rd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Standard"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soldier"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pensioner"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:onClick="SHOWtp"
                android:text="SHOW INFO"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="118dp"
            android:layout_height="43dp"
            android:text="OR"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:background="#0CEE43"
            android:text="TIME :"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTime"
            android:layout_width="191dp"
            android:layout_height="39dp"
            android:background="#DDD8D8"
            android:ems="10"
            android:hint="insert the time"
            android:inputType="time"
            android:textColor="#2B2323"
            android:textColorHint="#A81A1414" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:onClick="SHOWtm"
            android:text="SHOW INFO"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:onClick="backBT"
            app:srcCompat="@drawable/backbt" />

        <TextView
            android:id="@+id/tv13"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="INFO - HERE !" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>
