<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:weightSum="2"
    tools:context=".MainActivity">


    <ListView
        android:id="@+id/lv"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/colorBackgroundFloating"
        android:cacheColorHint="#FFFFFF"
        android:divider="@android:color/black"
        android:dividerHeight="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="191dp"
            android:layout_height="64dp"
            android:background="@android:color/holo_red_dark"
            android:text="Choose type of passenger"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/rdg"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:background="#696666">

            <RadioButton
                android:id="@+id/rd1"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Standard" />

            <RadioButton
                android:id="@+id/rd2"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Soldier" />

            <RadioButton
                android:id="@+id/rd3"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Pensioner" />

            <RadioButton
                android:id="@+id/rd4"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Child" />


        </RadioGroup>

        <Space
            android:layout_width="100dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="191dp"
            android:layout_height="44dp"
            android:background="#030D44"
            android:text="Leaving time"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTime"
            android:layout_width="191dp"
            android:layout_height="58dp"
            android:background="#5C5858"
            android:ems="10"
            android:hint="insert the time"
            android:inputType="time"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="@android:color/background_light" />

        <Space
            android:layout_width="100dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btn"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:onClick="next"
            android:text="NEXT PESSENGER"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:onClick="continueBT"
            app:srcCompat="@drawable/continueb" />

    </LinearLayout>

</LinearLayout>